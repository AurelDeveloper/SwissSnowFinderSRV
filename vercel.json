{
    "rewrites": [
        { "source": "/(.*)", "destination": "/api/index" }
    ],
    "engines": {
        "node": "18.x"
    },
    "builds": [
        {
            "use": "@vercel/python",
            "config": { "runtime": "python3.9" }
        }
    ],
    "crons": [
        {
            "path": "/api/index",
            "schedule": "0 0 * * *"
        }
    ]
}